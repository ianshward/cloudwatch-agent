var exec = require('child_process').exec;

exports.definition = {
    "name": "DiskRootPercentUsed",
    "namespace": "System/Linux",
    "unit": "Percent",
    "interval": 60000,
    "command": function(cb) {
        var res = {};
        exec('df | grep -m1 "/dev/xvda1" | tr -s " " | cut -d " " -f 5', function(err, value) {
            res.value = value.substring(0, value.length -2);
            exec('wget -q -O - http://169.254.169.254/latest/meta-data/instance-id', function(err, instance) {
                res.instance = instance;
                cb(res);
            });
        });
    }
}
